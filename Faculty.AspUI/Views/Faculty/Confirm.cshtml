@model Faculty.AspUI.ViewModels.Faculty.FacultyModify

@{
    ViewData["Title"] = "Faculty - Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@_localizer["ConfirmCaption"].Value</h1>
<h4>@_localizer["FacultyCaption"].Value</h4>
<hr/>

<div class="row">
    <form asp-action="@ViewBag.RefererActionName" asp-controller="Faculty">
        <div class="form-group">
            <label class="col-form-label-lg">@_localizer["ConfirmMessage"].Value</label>
            <div>
                <input type="submit" value="@_localizer["BtnAccept"].Value" class="btn btn-primary mr-3" />
                <a asp-action="Index" class="btn btn-primary">@_localizer["LinkBackToList"].Value</a>
            </div>
        </div>
        <hr>

        <div class="form-group">
            <input type="hidden" asp-for="Id" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="StartDateEducation" class="col-form-label">@_localizer["LabelStartDateEducation"].Value</label>
            <input type="date" value="@Model.StartDateEducation.ToString("yyyy-MM-dd")" asp-format="{0:dd/MM/yyyy}" asp-for="StartDateEducation" class="form-control" readonly="readonly" />
        </div>
        <hr>

        <div class="form-group">
            <label asp-for="CountYearEducation" class="col-form-label">@_localizer["LabelCountYearEducation"].Value</label>
            <input type="text" asp-for="CountYearEducation" class="form-control" readonly="readonly" />
        </div>
        <hr>

        <div class="form-group">
            <label asp-for="StudentId" class="col-form-label">@_localizer["SelectStudent"].Value</label>
            <select asp-for="StudentId" asp-items="@(new SelectList(ViewBag.Students, "Id", "Surname"))" class="custom-select" disabled="disabled"></select>
            <input type="hidden" asp-for="StudentId" value="@Model.StudentId"/>
        </div>
        <hr>

        <div class="form-group">
            <label asp-for="CuratorId" class="col-form-label">@_localizer["SelectCurator"].Value</label>
            <select asp-for="CuratorId" asp-items="@(new SelectList(ViewBag.Curators, "Id", "Surname"))" class="custom-select" disabled="disabled"></select>
            <input type="hidden" asp-for="CuratorId" value="@Model.CuratorId"/>
        </div>
        <hr>

        <div class="form-group">
            <label asp-for="GroupId" class="col-form-label">@_localizer["SelectGroup"].Value</label>
            <select asp-for="GroupId" asp-items="@(new SelectList(ViewBag.Groups, "Id", "Name"))" class="custom-select" disabled="disabled"></select>
            <input type="hidden" asp-for="GroupId" value="@Model.GroupId"/>
        </div>
    </form>
</div>
