@model Faculty.BusinessLayer.ModelsDto.CreateFacultyDto

@{
    ViewData["Title"] = "Faculty - Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@_localizer["CreateCaption"].Value</h1>
<h4>@_localizer["FacultyCaption"].Value</h4>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Faculty">
            <div class="form-group">
                <label asp-for="StartDateEducation">@_localizer["LabelStartDateEducation"].Value</label>
                <input 
                    asp-for="StartDateEducation" 
                    asp-format="{0:dd/MM/yyyy}" 
                    data-val="true" 
                    data-val-required="@_localizer["StartDateEducationRequired"].Value" 
                    class="form-control"/>
                <span asp-validation-for="StartDateEducation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CountYearEducation">@_localizer["LabelCountYearEducation"].Value</label>
                <input 
                    asp-for="CountYearEducation" 
                    data-val="true" 
                    data-val-required="@_localizer["CountYearEducationRequired"].Value" 
                    data-val-range-min="3" 
                    data-val-range-max="5"
                    data-val-range="@_localizer["CountYearEducationRange"].Value"
                    class="form-control" />
                <span asp-validation-for="CountYearEducation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StudentId">@_localizer["SelectStudent"].Value</label>
                <select asp-for="StudentId" asp-items="@(new SelectList(ViewBag.ViewModelFaculty.Students, "Id", "Surname"))" data-val="true" data-val-required="@_localizer["StudentRequired"].Value" class="custom-select"></select>
            </div>
            
            <div class="form-group">
                <label asp-for="CuratorId">@_localizer["SelectCurator"].Value</label>
                <select asp-for="CuratorId" asp-items="@(new SelectList(ViewBag.ViewModelFaculty.Curators, "Id", "Surname"))" data-val="true" data-val-required="@_localizer["CuratorRequired"].Value" class="custom-select"></select>
            </div>
            
            <div class="form-group">
                <label asp-for="GroupId">@_localizer["SelectGroup"].Value</label>
                <select asp-for="GroupId" asp-items="@(new SelectList(ViewBag.ViewModelFaculty.Groups, "Id", "Name"))" data-val="true" data-val-required="@_localizer["GroupRequired"].Value" class="custom-select"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="@_localizer["BtnCreate"].Value" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@_localizer["LinkBackToList"].Value</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
