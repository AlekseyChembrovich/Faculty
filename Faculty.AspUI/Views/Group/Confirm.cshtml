@model Faculty.AspUI.ViewModels.Group.GroupModify

@{
    ViewData["Title"] = "Group - Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@_localizer["ConfirmCaption"].Value</h1>
<h4>@_localizer["GroupCaption"].Value</h4>
<hr/>

<div class="row">
    <form asp-action="@ViewBag.RefererActionName" asp-controller="Group">
        <div class="form-group">
            <label class="col-form-label-lg">@_localizer["ConfirmMessage"].Value</label>
            <div>
                <input type="submit" value="@_localizer["BtnAccept"].Value" class="btn btn-primary mr-3"/>
                <a asp-action="Index" class="btn btn-primary">@_localizer["LinkBackToList"].Value</a>
            </div>
        </div>
        <hr>

        <div class="form-group">
            <input type="hidden" asp-for="Id" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Name" class="col-form-label">@_localizer["LabelName"].Value</label>
            <input type="text" asp-for="Name" class="form-control" readonly="readonly" />
        </div>
        <hr>
        
        <div class="form-group">
            <label asp-for="SpecializationId" class="col-form-label">@_localizer["SelectSpecialization"].Value</label>
            <select asp-for="SpecializationId" asp-items="@(new SelectList(ViewBag.Specializations, "Id", "Name"))" class="custom-select" disabled="disabled"></select>
            <input type="hidden" asp-for="SpecializationId" value="@Model.SpecializationId"/>
        </div>
    </form>
</div>
