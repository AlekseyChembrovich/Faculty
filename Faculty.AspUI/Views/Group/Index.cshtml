@model IList<Faculty.AspUI.ViewModels.Group.GroupDisplay>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Group - List";
    var isAdmin = Context.User.IsInRole("administrator");
}

<div class="container mb-3">
    @if (isAdmin)
    {
        @Html.ActionLink(_localizer["BtnNew"].Value, "Create", "Group", null, new { @class = "btn btn-primary" })
    }
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">@_localizer["ColumnNumber"].Value</th>
            <th scope="col">@_localizer["ColumnName"].Value</th>
            <th scope="col">@_localizer["ColumnSpecialization"].Value</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Name</td>
                <td>@Model[i].SpecializationName</td>
                <td>
                    @if (isAdmin)
                    {
                        @Html.ActionLink(_localizer["BtnDelete"].Value, "Delete", "Group", new {id = Model[i].Id}, new {@class = "btn btn-primary mr-2"})
                        @Html.ActionLink(_localizer["BtnEdit"].Value, "Edit", "Group", new {id = Model[i].Id}, new {@class = "btn btn-primary"})
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
