@model IList<Faculty.BusinessLayer.ModelsDTO.GroupDTO>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Group - List";
}

<div class="container mb-3">
    @Html.ActionLink("New", "Create", "Group", null, new { @class = "btn btn-primary" })
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Number</th>
            <th scope="col">Name</th>
            <th scope="col">Specialization</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Name</td>
                <td>@Model[i].Specialization.Name</td>
                <td>
                    @Html.ActionLink("Delete", "Delete", "Group", new { id = Model[i].Id }, new { @class = "btn btn-primary mr-2" })
                    @Html.ActionLink("Edit", "Edit", "Group", new { id = Model[i].Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
