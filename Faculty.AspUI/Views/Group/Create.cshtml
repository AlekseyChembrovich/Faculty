@model Faculty.AspUI.ViewModels.Group.GroupAdd

@{
    ViewData["Title"] = "Group - Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@_localizer["CreateCaption"].Value</h1>
<h4>@_localizer["GroupCaption"].Value</h4>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Confirm" asp-controller="Group">
            <div class="form-group">
                <label asp-for="Name">@_localizer["LabelName"].Value</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SpecializationId">@_localizer["LabelSpecialization"].Value</label>
                <select asp-for="SpecializationId" asp-items="@(new SelectList(ViewBag.Specializations, "Id", "Name"))" class="custom-select"></select>
            </div>
            
            <div class="form-group">
                <input type="hidden" value="Create" name="actionName"/>
            </div>

            <div class="form-group">
                <input type="submit" value="@_localizer["BtnCreate"].Value" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@_localizer["LinkBackToList"].Value</a>
</div>
