@model Faculty.AspUI.ViewModels.Curator.CuratorDisplayModify

@{
    ViewData["Title"] = "Curator - Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@_localizer["ConfirmCaption"].Value</h1>
<h4>@_localizer["CuratorCaption"].Value</h4>
<hr/>

<div class="row">
    <form asp-action="@ViewBag.RefererActionName" asp-controller="Curator">
        <div class="form-group">
            <label class="col-form-label-lg">@_localizer["ConfirmMessage"].Value</label>
            <div>
                <input type="submit" value="@_localizer["BtnAccept"].Value" class="btn btn-primary mr-3"/>
                <a asp-action="Index" class="btn btn-primary">@_localizer["LinkBackToList"].Value</a>
            </div>
        </div>
        <hr>

        <div class="form-group">
            <input type="hidden" asp-for="Id" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Surname" class="col-form-label">@_localizer["LabelSurname"].Value</label>
            <input type="text" asp-for="Surname" class="form-control" readonly="readonly" />
        </div>
        <hr>

        <div class="form-group">
            <label asp-for="Name" class="col-form-label">@_localizer["LabelName"].Value</label>
            <input type="text" asp-for="Name" class="form-control" readonly="readonly" />
        </div>
        <hr>

        <div class="form-group">
            <label asp-for="Doublename" class="col-form-label">@_localizer["LabelDoublename"].Value</label>
            <input type="text" asp-for="Doublename" class="form-control" readonly="readonly" />
        </div>
        <hr>

        <div class="form-group">
            <label asp-for="Phone" class="col-form-label">@_localizer["LabelPhone"].Value</label>
            <input asp-for="Phone" class="form-control" readonly="readonly" />
        </div>
    </form>
</div>
