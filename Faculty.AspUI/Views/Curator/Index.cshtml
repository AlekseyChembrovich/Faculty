@model IList<Faculty.AspUI.ViewModels.Curator.CuratorDisplayModify>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Curator - List";
}

<div class="container mb-3">
    @Html.ActionLink(_localizer["BtnNew"].Value, "Create", "Curator", null, new { @class = "btn btn-primary" })
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">@_localizer["ColumnNumber"].Value</th>
            <th scope="col">@_localizer["ColumnSurname"].Value</th>
            <th scope="col">@_localizer["ColumnName"].Value</th>
            <th scope="col">@_localizer["ColumnDoublename"].Value</th>
            <th scope="col">@_localizer["ColumnPhone"].Value</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Surname</td>
                <td>@Model[i].Name</td>
                <td>@Model[i].Doublename</td>
                <td>@Model[i].Phone</td>
                <td>
                    @Html.ActionLink(_localizer["BtnDelete"].Value, "Confirm", "Curator", new { id = Model[i].Id }, new { @class = "btn btn-primary mr-2" })
                    @Html.ActionLink(_localizer["BtnEdit"].Value, "Edit", "Curator", new { id = Model[i].Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>