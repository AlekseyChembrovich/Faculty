@model Faculty.AspUI.ViewModels.User.UserModify

@{
    ViewData["Title"] = "User - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@_localizer["EditCaption"].Value</h1>
<h4>@_localizer["UserCaption"].Value</h4>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="User">
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Login" class="col-form-label">@_localizer["LabelLogin"].Value</label>
                <input asp-for="Login" class="form-control"/>
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Roles">@_localizer["LabelRoles"].Value</label>
                <ul class="list-group">
                    @foreach (var item in ViewBag.Roles)
                    {
                        <li class="list-group-item">
                            <div class="form-check">
                                @if (Model?.Roles?.Contains(item) ?? false)
                                {
                                    <input id="@item" type="checkbox" name="Roles" value="@item" class="form-check-input" checked=""/>
                                }
                                else
                                {
                                    <input id="@item" type="checkbox" name="Roles" value="@item" class="form-check-input"/>
                                }
                                <label for="@item" class="form-check-label">@item</label>
                            </div>
                        </li>
                    }
                </ul>
                <span asp-validation-for="Roles" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Birthday" class="col-form-label">@_localizer["LabelBirthday"].Value</label>
                <input asp-for="Birthday" type="date" value="@Model?.Birthday?.ToString("yyyy-MM-dd")" asp-format="{0:dd/MM/yyyy}" class="form-control"/>
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>

            <div class="form-group">
                <input type="submit" value="@_localizer["BtnSave"].Value" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="User">@_localizer["LinkBackToList"].Value</a>
</div>
