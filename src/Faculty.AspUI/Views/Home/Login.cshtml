@model Faculty.AspUI.ViewModels.LoginRegister.LoginUser

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@_localizer["LoginCaption"].Value</h1>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Home">
            <div class="form-group">
                <label asp-for="Login" class="col-form-label">@_localizer["LabelLogin"].Value</label>
                <input asp-for="Login" class="form-control"/>
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="col-form-label">@_localizer["LabelPassword"].Value</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>

            <div class="form-group">
                <input type="submit" value="@_localizer["BtnLogin"].Value" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div class="mb-4">
    <a asp-action="Register">@_localizer["LinkRegister"].Value</a>
</div>

<div>
    <a asp-action="Index" asp-controller="Faculty">@_localizer["LinkBackToList"].Value</a>
</div>
