@model IEnumerable<Faculty.DataAccessLayer.Models.Group>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}

<div class="container mb-3">
    @Html.ActionLink("New", "Create", "Group", null, new { @class = "btn btn-primary" })
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Specialization</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Specialization.Name</td>
                <td>
                    @Html.ActionLink("Delete", "Delete", "Group", new { id = item.Id }, new { @class = "btn btn-primary mr-2" })
                    @Html.ActionLink("Edit", "Edit", "Group", new { id = item.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
