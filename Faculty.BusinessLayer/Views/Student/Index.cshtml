@model IList<Faculty.DataAccessLayer.Models.Student>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Student - List";
}

<div class="container mb-3">
    @Html.ActionLink("New", "Create", "Student", null, new { @class = "btn btn-primary" })
</div>

<table class="table">
    <thead>
    <tr>
        <th scope="col">Number</th>
        <th scope="col">Surname</th>
        <th scope="col">Name</th>
        <th scope="col">Doublename</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    @for (var i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@(i + 1))</td>
            <td>@Model[i].Surname</td>
            <td>@Model[i].Name</td>
            <td>@Model[i].Doublename</td>
            <td>
                @Html.ActionLink("Delete", "Delete", "Student", new {id = Model[i].Id}, new {@class = "btn btn-primary"})
                @Html.ActionLink("Edit", "Edit", "Student", new {id = Model[i].Id}, new {@class = "btn btn-primary"})
            </td>
        </tr>
    }
    </tbody>
</table>
