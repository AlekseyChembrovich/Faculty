@model Faculty.DataAccessLayer.Models.Student

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>
<h4>Student</h4>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Student" method="post">
            <div class="form-group">
                <label asp-for="Surname">Surname: </label>
                <input type="text" asp-for="Surname" class="form-control"/>
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name">Name: </label>
                <input type="text" asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Doublename">Doublename: </label>
                <input type="text" asp-for="Doublename" class="form-control"/>
                <span asp-validation-for="Doublename" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
