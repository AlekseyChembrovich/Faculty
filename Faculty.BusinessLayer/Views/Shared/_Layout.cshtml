<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        @Html.ActionLink(linkText: "Faculties", actionName: "Index", controllerName: "Faculty", null, new { @class = "nav-link" })
                        @Html.ActionLink(linkText: "Groups", actionName: "Index", controllerName: "Group", null, htmlAttributes: new { @class = "nav-link" })
                        @Html.ActionLink(linkText: "Specializations", actionName: "Index", controllerName: "Specialization", null, htmlAttributes: new { @class = "nav-link" })
                        @Html.ActionLink(linkText: "Students", actionName: "Index", controllerName: "Student", null, htmlAttributes: new { @class = "nav-link" })
                        @Html.ActionLink(linkText: "Curators", actionName: "Index", controllerName: "Curator", null, htmlAttributes: new { @class = "nav-link" })
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3 pt-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Faculty
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
