@model IList<Faculty.DataAccessLayer.Models.Faculty>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Faculty - List";
}

<div class="container mb-3">
    <form asp-action="Index" asp-controller="Faculty" method="get" class="d-flex flex-row align-items-center">
        <label for="valueFilter" class="col-form-label">Enter count year education for filtration: </label>
        <input id="valueFilter" name="valueFilter" type="text" class="form-control ml-3 mr-3"/>
        <input type="submit" value="Filter" class="btn btn-primary"/>
    </form>
</div>

<div class="container mb-3">
    @Html.ActionLink("New", "Create", "Faculty", null, new { @class = "btn btn-primary" })
</div>

<table class="table">
    <thead>
    <tr>
        <th scope="col">Number</th>
        <th scope="col">StartDateEducation</th>
        <th scope="col">CountYearEducation</th>
        <th scope="col">Group</th>
        <th scope="col">Curator</th>
        <th scope="col">Student</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].StartDateEducation.ToString("yyyy-MM-dd")</td>
                <td>@Model[i].CountYearEducation</td>
                <td>@Model[i].Group.Name</td>
                <td>@Model[i].Curator.Surname</td>
                <td>@Model[i].Student.Surname</td>
                <td>
                    @Html.ActionLink("Delete", "Delete", "Faculty", new { id = Model[i].Id }, new { @class = "btn btn-primary mr-2" })
                    @Html.ActionLink("Edit", "Edit", "Faculty", new { id = Model[i].Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>

